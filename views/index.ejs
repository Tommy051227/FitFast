d<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>FitFast Dashboard</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">FitFast</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addUser">Add User</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addWorkout">Add Workout Plan</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/addMeal">Add Meal Log</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3">
        <h2>Users</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user) { %>
                    <tr>
                        <td><img src="/pictures/<%= user.image %>" class="img-thumbnail" alt="User Image" width="50" height="50"></td>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.address %></td>
                        <td>
                            <a href="/user/<%= user.userId %>" class="btn btn-info btn-sm">View</a>
                            <a href="/editUser/<%= user.userId %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/deleteUser/<%= user.userId %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <h2>Workout Plans</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Difficulty Level</th>
                    <th>Duration</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% workoutPlans.forEach(function(plan) { %>
                    <tr>
                        <td><%= plan.name %></td>
                        <td><%= plan.difficultyLevel %></td>
                        <td><%= plan.duration %> minutes</td>
                        <td>
                            <a href="/workout/<%= plan.planId %>" class="btn btn-info btn-sm">View</a>
                            <a href="/editWorkout/<%= plan.planId %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/deleteWorkout/<%= plan.planId %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <h2>Meal Logs</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>User</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% mealLogs.forEach(function(meal) { %>
                    <tr>
                        <td><%= meal.name %></td>
                        <td><%= meal.userId %></td>
                        <td><%= new Date(meal.date).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></td>
                        <td>
                            <a href="/meal/<%= meal.mealId %>" class="btn btn-info btn-sm">View</a>
                            <a href="/editMeal/<%= meal.mealId %>" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/deleteMeal/<%= meal.mealId %>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
