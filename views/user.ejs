<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Add Workout Plan</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">FitFast</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main>
        <div class="container">
            <h1>User Details</h1>
            <p>Username: <%= user.username %></p>
            <p>Email: <%= user.email %></p>
            <p>User ID: <%= user.userId %></p> <!-- Ensure user ID is displayed -->

            <!-- Favorite Workout Plans Section -->
            <h2>Favorite Workout Plans</h2>
            <ul>
                <% for(let plan of workoutPlans) { %>
                    <li><%= plan.name %> - <%= plan.difficultyLevel %></li>
                <% } %>
            </ul>
            <form action="/user/<%= user.userId %>/addFavorite" method="POST">
                <label for="planId">Add Favorite Workout Plan:</label>
                <select name="planId" id="planId">
                    <% for(let plan of allWorkoutPlans) { %>
                        <option value="<%= plan.planId %>"><%= plan.name %></option>
                    <% } %>
                </select>
                <button type="submit">Add</button>
            </form>

            <!-- Meal Eaten Today Section -->
            <h2>Meal Eaten Today</h2>
            <form action="/user/<%= user.userId %>/addMeal" method="POST">
                <div>
                    <label for="mealName">Meal Name:</label>
                    <input type="text" id="mealName" name="name" required>
                </div>
                <div>
                    <label for="date">Date:</label>
                    <input type="date" id="date" name="date" required>
                </div>
                <div>
                    <label for="calories">Calories:</label>
                    <input type="number" id="calories" name="calories">
                </div>
                <div>
                    <label for="protein">Protein (g):</label>
                    <input type="number" id="protein" name="protein">
                </div>
                <div>
                    <label for="carbs">Carbohydrates (g):</label>
                    <input type="number" id="carbs" name="carbs">
                </div>
                <div>
                    <label for="fat">Fat (g):</label>
                    <input type="number" id="fat" name="fat">
                </div>
                <button type="submit">Add Meal</button>
            </form>
        </div>
    </main>
</body>
</html>
